# auto-reload yes

reload-threads 4

bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key l open
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key T toggle-show-read-feeds

macro , open-in-browser
macro m set browser "ssid mpv %u"; open-in-browser ; set browser sensible-browser
macro y set browser "tsp youtube-dl %u"; open-in-browser ; set browser sensible-browser
# notify-program "/usr/bin/notify-send"
highlight all "---.*---" yellow
